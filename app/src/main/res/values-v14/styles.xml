<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">  
        <!-- API 14 theme customizations can go here. -->  
        <item name="android:actionBarStyle">@style/my_actionbar_style</item>   
    </style>  
      
    <style name="my_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">  
        <item name="android:background">#99e74c3c</item>  
        <item name="android:titleTextStyle">@style/AcBar_titleStyle</item>
        <item name="android:drawableLeft">@drawable/light</item>   
         
    </style>  
    
    <style name="AcBar_titleStyle">  
       <item name="android:textColor">#ecf0f1</item>
       <item name="android:textSize">24sp</item>
       <item name="android:textStyle">bold</item>
    </style>  
    
    
    <style name="AboutTheme" parent="android:Theme.Holo.Light">  
        <!-- API 14 theme customizations can go here. -->  
        <item name="android:actionBarStyle">@style/about_actionbar_style</item>   
    </style>  
      
    <style name="about_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">  
        <item name="android:background">#99e74c3c</item>  
        <item name="android:titleTextStyle">@style/aboutAcBar_titleStyle</item>
        <item name="android:drawableLeft">@drawable/back</item>   
         
    </style>  
    
    <style name="aboutAcBar_titleStyle">  
       <item name="android:textColor">#ecf0f1</item>
       <item name="android:textSize">24sp</item>
       <item name="android:text">关于</item>
       <item name="android:textStyle">bold</item>
    </style>  
    

</resources>
